<div class="basic-grey">

<script>
$.notify("<%= notice %>", "success");
</script>

<p id="notice"></p>

<h1><%= "#{t('message.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @kinds.model.human_attribute_name("description") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>        
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
        <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: t('message.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new'), new_kind_path, class:"btn btn-primary" %>
<%= link_to t('buttons.back'), home_index_path, class:"btn btn-success"%>

</div>